<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Categories</title>
  <style>
    .card-title{
      text-align: center;
      font-size: 30px;
      font-weight: bold;
      color: rgb(1, 1, 80);
    }
    .card-text{
      text-align: center;
      padding: 10px;
      color: rgb(46, 46, 197);
    }
  </style>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
  <%- include('./partials/_navbar.ejs') %>

  <div class="row row-cols-1 row-cols-md-2">
    <% data.forEach((e)=> {  %>
      <div class="col mb-4">
        <div class="card">
          <img src="/img/K-LabuanCermin.jpeg" class="card-img-top w-50 mx-auto d-block" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= e.title %></h5>
            <p class="card-text"><%= e.about %></p>
          </div>
          <div class="card-footer mr-sm-2">
            <a class="btn btn-primary btn-md" href="/details/<%= e.id %>" role="button">View Details</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <%- include('./partials/_script.ejs') %>
</body>
</html>